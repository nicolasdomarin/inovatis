<h1>Listing Produits</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Libelle</th>
      <th>Description</th>
      <th>Prix</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produits.each do |produit| %>
      <tr>
        <td><%= produit.libelle %></td>
        <td><%= produit.description %></td>
        <td><%= produit.prix %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, produit, class: "btn btn-info" %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_produit_path(produit), class: "btn btn-warning" %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, produit, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Produit', new_produit_path, class: "btn btn-default" %>

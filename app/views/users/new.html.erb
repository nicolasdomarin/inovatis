<h1>New User</h1>

<%= bootstrap_form_for(resource, as: resource_name, url: user_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :prenom, autofocus: true %>
  </div>

  <div class="field">
    <%= f.text_field :nom %>
  </div>

  <div class="field">
    <%= f.text_field :adresse%>
  </div>  

  <div class="field">
    <%= f.number_field :cp%>
  </div>

  <div class="field">
    <%= f.email_field :email, placeholder: "Ex: votre@mail.com" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "8 caractÃ¨res minimum" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.check_box :admin %>
  </div>

  <div class="actions">
    <%= f.submit "Create" %>
  </div>
<% end %>

